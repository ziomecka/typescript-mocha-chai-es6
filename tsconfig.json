{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": ".",
    "outDir": "./tsc",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [ "dom", "es2015" ],
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}